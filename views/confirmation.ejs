    <script>
     $(document).ready(function(){

        
        $(".yes").click(function(){
  var name = $(".name").text();
 
 
$.ajax({type:"POST",data:JSON.stringify(name), url:'/confirmation', headers:{'Content-Type':'application/json'}, success:function(data){
 alert(data);
}
})       
        
        });
     });
    </script>
