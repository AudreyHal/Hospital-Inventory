    <body>
                   
                        <div class="container-fluid text-center box">
                                        <div class ="blue container-fluid">
                                            <a href="/main"> <img src="es.png" class="img-fluid slide slideInUp" ></a> </div>
                                            <div class="frame slide slideInDown">  
                                        <p class="head"> Are you sure you want to delete the all records of this patient:</p>
                                         
                                        <div class="edit">  
                                            <div >
                                                <% if (data && data.length){ %>
                                                    <form method="POST" action="/confirmation">
                                                        <input type="hidden" value="<%= data[0].name %>" name="name">
                                              <p class="name text-center"><b><%= data[0].name %></b></p> <% } %>
                                         </div>
                                        <div class="row ">
                                            <div class="col-md-6"> <button class="btn btn-primary" type="submit"  ><b>YES</b></button></div></form>
                                            <div class="col-md-6"><a class="btn btn-primary" href="/main" ><b>NO</b></a></div>
                                        </div>
    
                                    </div>
                     </div> 
        </div> 
